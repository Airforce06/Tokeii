<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/vertical_container"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/roundedImageView"
            android:scaleType="centerCrop"
            app:layout_constraintWidth_percent="0.45" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/horizontal_container1"
            android:layout_width="0dp"
            android:layout_height="112dp"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"
            app:shapeAppearance="@style/roundedImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/vertical_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/horizontal_container2"
            android:layout_width="0dp"
            android:layout_height="112dp"
            android:scaleType="fitCenter"
            app:shapeAppearance="@style/roundedImageView"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/vertical_container"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_container1"
            app:layout_constraintWidth_percent="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>